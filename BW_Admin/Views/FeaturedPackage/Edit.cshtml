@model BW_Admin.tbl_FeaturedPackage

@{
    ViewBag.Title = "Edit";
}

<div class="content">

    <div class="module">
        <div class="module-head">
            <h3>Featured Package</h3>
        </div>
        <div class="module-body">

            @using (Html.BeginForm())
            {
                

                <div class="form-horizontal">
                    <h4>tbl_FeaturedPackage</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ftp_ID)

                    <div class="control-group">
                        @Html.LabelFor(model => model.ftp_PlaceFK, "ftp_PlaceFK", htmlAttributes: new { @class = "span8" })
                        <div class="controls">
                            @Html.DropDownList("ftp_PlaceFK", null, htmlAttributes: new { @class = "span8" })
                            @Html.ValidationMessageFor(model => model.ftp_PlaceFK, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.ftp_Priority, htmlAttributes: new { @class = "span8" })
                        <div class="controls">
                            @Html.EditorFor(model => model.ftp_Priority, new { htmlAttributes = new { @class = "span8" } })
                            @Html.ValidationMessageFor(model => model.ftp_Priority, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="col-md-offset-2 controls">
                            <input type="submit" value="Update" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>

</div>

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
