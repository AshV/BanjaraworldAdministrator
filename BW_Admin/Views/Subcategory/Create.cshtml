@model BW_Admin.tbl_Subcategory

@{
    ViewBag.Title = "Create";
}

<div class="content">

    <div class="module">
        <div class="module-head">
            <h3>Subcategory</h3>
        </div>
        <div class="module-body">

            @using (Html.BeginForm("Create", "Subcategory", FormMethod.Post, new { @class = "form-horizontal row-fluid" }))
            {
                

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="control-group">
                        <label class="control-label">Name</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.sct_Name, new { htmlAttributes = new { @class = "span8" } })
                            @Html.ValidationMessageFor(model => model.sct_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Category</label>
                        <div class="controls">
                            @Html.DropDownList("sct_CategoryFK", null, htmlAttributes: new { @class = "span8" })
                            @Html.ValidationMessageFor(model => model.sct_CategoryFK, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Description</label>
                        <div class="controls">
                            @Html.TextAreaFor(model => model.sct_Descripton, new { htmlAttributes = new { @class = "span8" } })
                            @Html.ValidationMessageFor(model => model.sct_Descripton, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="col-md-offset-2 controls">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
